<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape >
            <solid
                android:color="#FF4500"/>
            <stroke
                android:width="3dp"
                android:color="#FF4500" />


            <corners
                android:radius="30dp"/>

        </shape>
    </item>
    <item>
        <shape >
            <solid
                android:color="#FFFFFF"/>
            <stroke
                android:width="1dp"
                android:color="#FF4500" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <corners
                android:radius="30dp"/>


        </shape>
    </item>
</selector>


